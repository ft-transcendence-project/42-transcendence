{
  "index_patterns": ["logstash-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "@timestamp": { "type": "date" },
        "@version": { "type": "keyword" },
        "host": { "type": "keyword" },
        "message": { "type": "text" },
        "tags": { "type": "keyword" },
        "type": { "type": "keyword" },
        "level": { "type": "keyword" },
        "logger_name": { "type": "keyword" },
        "path": { "type": "keyword" }
      }
    }
  }
}